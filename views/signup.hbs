<article class="signup">
  <form action="/auth/signup" method="POST">
    <label for="username">Username</label>
    <input class="button" type="text" name="username" id="username" required placeholder="Username">
    <label for="password">Password</label>
    <input class="button" type="password" name="password" id="password" required placeholder="Password">
    <button class="button" type="submit">Join Us!</button>
  </form>
</article>