<div class="welcome-title">
  <h2>Welcome,</h2>
  <h3>Sign in to continue!</h3>
</div>

  <form class="login" action="/auth/login" method="POST">
    <label for="username">Username</label>
    <input class="button margin-input" for="text" name="username" id="username" required placeholder="Username">
    <label for="password">Password</label>
    <input class="button margin-input" type="password" name="password" id="password" id="password" placeholder="Password">
    <button  class="margin-button" type="submit">Login</button>
  </form>
