{{>footer}}
<main class="structure">
  <section class= "section-card">
    <h2>My profile</h2>
    <form action="/auth/logout" method="POST">
    <button class="logout" type="submit"><img src="../images/logout.png" class="icon-style" alt="home icon"></button>
    </form>
  </section>  

  <section class="profile-card">
    <article class="profile">
      <img class="profile-img" src="{{image}}" alt="{{username}} image">
      <section class="profile-bottom">
        <a href="/users/{{_id}}/update-profile"><button class="profile-button">Edit profile</button></a>
        <form class="profile-delete" id={{id}} action="/users/{{_id}}/delete" method="POST">
        <button class="profile-button" type="submit" id="{{_id}}">Delete profile</button>
      </form>
      </section>
    </article>
    <article class="about-me">
      <p>{{username}}</p>
      <p>Age : {{age}}</p>
      <section class="marker">
        <p>Country: {{country}}</p>
      </section>
      <h3>About Me!</h3>
      <p>{{about}}</p>
    </article>
  </section>

  <h2 class="header">Hosting</h2>
  <section class="event-list">

  <div class="scrolling-wrapper">
    {{#each myevents}}
    <article class="card-home">
      <section class="info-event">
        <h3 class="profile-p">{{title}}</h3>
      </section> 
      <img class="img-event-style" src="{{image}}" alt="user's event picture">

      <section class="text-card">
        <section class="marker">
          <img src="../images/location.png" class="icon-style-small" alt="location icon">
          <p>{{location}}</p>
        </section>
        <section class="marker">
          <img src="../images/attendees1.png" class="icon-style-medium" alt="attendees icon">
          <p>{{attendees}}</p>
        </section>
      </section>
      <section>
        {{#each guests}}
        <p class="show-guests">Guests: {{username}}</p>
        {{/each}}
      </section>

      <section class="delete-update">
        <div>
        <button class="button-margin"><a href="/events/{{_id}}/edit">Edit</a></button>
        <button class="button-delete button-margin" id="{{_id}}">Delete</button>
        </div>
    
    </article>
    {{/each}}
    </div> 
  
    <h2 class="header">Attending</h2>
    
   <div class="scrolling-wrapper">
    {{#each events}}
    <article class="card-home card-profile-img">
      <div class="info-event">
        <h3 class="profile-p">{{title}}</h3>
      <img class="img-event-style" src="{{image}}" alt="user's event picture">
      <section class="text-card">
        <section class="marker">
          <img src="../images/location.png" class="icon-style-small" alt="location icon">
          <p>{{location}}</p>
        </section>
        <section class="marker">
          <img src="../images/attendees1.png" class="icon-style-medium" alt="attendees icon">
          <p>{{attendees}}</p>
        </section>
      </section>
      <div class="delete-update">
        <div>
        <button class="button-margin button"><a href="/events/{{_id}}/edit">Edit</a></button>
        <button class="button-delete button-margin button" id="{{_id}}">Delete</button>
        </div>
      </div>
    </article>
    {{/each}}
    </div>
  </section>

</main>

<script src="../javascripts/delete.js"></script>