<form class="event-form" action="/events/create" method="POST">
<section class="event-list">
  {{#each events}}
    <article >
      <p class="profile-p"> Event:{{title}} - Location:{{location}}</p>
      <img src="{{image}}" alt="" width="200px">
      <button><a href="/events/{{_id}}/edit">Edit</a></button>
      <button type="submit" id="{{_id}}">Delete</button>
    </article>
  {{/each}}
</section>
</form>

