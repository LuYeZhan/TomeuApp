
<h2>Profile page</h2>
<p>Welcome {{currentUser.username}}</p>
<a href="/homepage"><i class="fas fa-home"> </i></a>

<a href="/events/create">></a>

<form class="event-form" action="/events/create" method="POST">
<section class="event-list">
  {{#each events}}
    <article >
      <p class="profile-p"> Event:{{title}} - Location:{{location}}</p>
      <img src="{{image}}" alt="user's picture">
      <div class="delete-update">
        <button class="button-margin"><a href="/events/{{_id}}/edit">Edit</a></button>
        <button class="button-margin" type="submit" id="{{_id}}">Delete</button>
      </div>
    </article>
  {{/each}}
</section>
</form>

<script src="../javascripts/delete.js"></script>

