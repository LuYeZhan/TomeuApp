<main class="structure">
  <section class="header">
    <h2>Update your Profile! </h2>
  </section>
 <section>
<form action="update-profile" method="POST" enctype="multipart/form-data">
  <label for="username">Username</label>
  <input type="text" name="username" id="username" value="{{username}}">
  
  <label for="country">Country</label>
  <input type="text" name="country" id="country" placeholder="Spain" value="{{country}}">

  <label for="age">Age</label>
  <input type="number" name="age" id="age" placeholder="21" value="{{age}}">

  <label for="about">About me</label>
  <input type="text" name="about" id="about" value="{{about}}">

  <label for="image">Add image</label>
  <input type="file" name="image"/>

  <button type="submit">Update your profile!</button>
</form>
</section>
</main>
<footer>
  <ul>
    <li><a href="/homepage"><img src="../../images/icon-home.png" class="icon-style" alt="home icon"></a></li>
    <li><a href="/users/profile"><img src="../../images/icon-profile1.png" class="icon-style" alt="profile icon"></a></li>
    <li><a href="/events/create"><img src="../../images/icon-add.png" class="icon-style" alt="profile create"></a></li>
  </ul>
</footer>

